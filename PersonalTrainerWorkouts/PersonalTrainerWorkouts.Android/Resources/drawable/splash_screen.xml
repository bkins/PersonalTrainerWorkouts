<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            >
<!--            xmlns:magic="http://magic.com/schemas/gradients"-->
<!--        >-->
  <item>
    <color android:color="@android:color/darker_gray"/>

  </item>

  <item>
    <bitmap android:src="@drawable/Splash_Background_1"
            android:tileMode="disabled"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
      />
  </item>
  <item android:width="400dp"
        android:height="400dp"
        android:drawable="@drawable/HopTrain_Trans"
        android:gravity="center">

  </item>
  <item android:bottom="40dp">
    <bitmap android:src="@drawable/NotGuaranteed"
            android:tileMode="disabled"
            android:gravity="fill_horizontal|bottom"
            />
  </item>
</layer-list>
